<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AboutParticipantActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/photo_participant"
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:paddingTop="54dp"
                    android:layout_gravity="center"
                    android:src="@drawable/photo"/>

                <TextView
                    android:id="@+id/name_participant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/photo_participant"
                    android:padding="16dp"
                    android:gravity="center"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:text="@string/name_participant"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_participant"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:paddingBottom="16dp"
                    android:text="@string/email_participant"/>

        </LinearLayout>


</ScrollView>